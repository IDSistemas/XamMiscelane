<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Miscelanea.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="User" Placeholder="Usuario"></Entry>
            <Entry x:Name="Password" Placeholder="Contraseña"></Entry>
            <Button x:Name="BtnLogin" Text="Ingresar" Clicked="BtnLogin_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Miscelanea.Views.SplitPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button x:Name="btn1" Grid.Row="0" Grid.Column="0" Text="Opcion 1" Clicked="btn1_Clicked"></Button>
        <Button x:Name="btn2" Grid.Row="0" Grid.Column="1" Text="Opcion 2" Clicked="btn2_Clicked"></Button>
        <Button x:Name="btn3" Grid.Row="0" Grid.Column="2" Text="Opcion 3" Clicked="btn3_Clicked"></Button>
        
        <ScrollView Grid.Row="1" Grid.ColumnSpan="3">
            <Label x:Name="lblContenido"></Label>
        </ScrollView>
    </Grid>
</ContentPage>